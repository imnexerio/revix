<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="4dp"
    android:gravity="center_vertical">

    <!-- Colored stick indicator -->
    <ImageView
        android:id="@+id/calendar_record_stick"
        android:layout_width="4dp"
        android:layout_height="20dp"
        android:src="@drawable/rounded_line_indicator"
        android:layout_marginEnd="8dp"
        android:contentDescription="Record type indicator" />

    <!-- Record text: Category 路 Subcategory 路 Title -->
    <TextView
        android:id="@+id/calendar_record_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Category 路 Subcategory 路 Title"
        android:textSize="12sp"
        android:textColor="@color/text"
        android:maxLines="1"
        android:ellipsize="end" />

</LinearLayout>