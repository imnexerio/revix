<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/counter_widget_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingTop="8dp"
    android:paddingEnd="8dp"
    android:paddingBottom="8dp"
    android:paddingStart="0dp"
    android:gravity="center_vertical"
    android:background="@color/white">

    <!-- Left: Colored stick indicator -->
    <ImageView
        android:id="@+id/lecture_type_indicator"
        android:layout_width="10dp"
        android:layout_height="match_parent"
        android:src="@drawable/rounded_line_indicator"
        android:layout_marginEnd="8dp"
        android:contentDescription="Counter type indicator" />

    <!-- Center: Counter area (35% width) -->
    <TextView
        android:id="@+id/counter_text"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_weight="0.35"
        android:layout_marginEnd="8dp"
        android:text="3\ndays"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/text"
        android:gravity="center"
        android:maxLines="2"
        android:lineSpacingMultiplier="0.8" />

    <!-- Right: 3 rows of text (65% width) -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.65"
        android:orientation="vertical">
        
        <!-- Row 1: Category -->
        <TextView
            android:id="@+id/category_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Category"
            android:textSize="15sp"
            android:textColor="@color/text"
            android:maxLines="1"
            android:ellipsize="end" />
        
        <!-- Row 2: Subcategory -->
        <TextView
            android:id="@+id/subcategory_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Subcategory"
            android:textSize="15sp"
            android:textColor="@color/text"
            android:layout_marginTop="2dp"
            android:maxLines="1"
            android:ellipsize="end" />
        
        <!-- Row 3: Record Title -->
        <TextView
            android:id="@+id/record_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Record Title"
            android:textSize="15sp"
            android:textColor="@color/text"
            android:layout_marginTop="2dp"
            android:maxLines="1"
            android:ellipsize="end" />
            
    </LinearLayout>

</LinearLayout>
