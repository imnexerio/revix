                <TextView android:id="@+id/day_20" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:gravity="center" android:textSize="11sp" />
                <TextView android:id="@+id/day_21" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:gravity="center" android:textSize="11sp" />
            </LinearLayout>

            <LinearLayout android:id="@+id/calendar_row_4" android:layout_width="match_parent" android:layout_height="24dp" android:orientation="horizontal">
                <TextView android:id="@+id/day_22" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:gravity="center" android:textSize="11sp" />
                <TextView android:id="@+id/day_23" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:gravity="center" android:textSize="11sp" />
