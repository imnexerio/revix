<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@color/white"
    android:padding="8dp">

    <!-- Left Side: Calendar Grid (50%) -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.5"
        android:orientation="vertical"
        android:gravity="center">

        <!-- Calendar Container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Calendar Header: M T W T F S S -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="M"
                    android:textSize="12sp"
                    android:textColor="@color/text"
                    android:gravity="center"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="T"
                    android:textSize="12sp"
                    android:textColor="@color/text"
                    android:gravity="center"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="W"
                    android:textSize="12sp"
                    android:textColor="@color/text"
                    android:gravity="center"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="T"
                    android:textSize="12sp"
                    android:textColor="@color/text"
                    android:gravity="center"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="F"
                    android:textSize="12sp"
                    android:textColor="@color/text"
                    android:gravity="center"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="S"
                    android:textSize="12sp"
                    android:textColor="@color/text"
                    android:gravity="center"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="S"
                    android:textSize="12sp"
                    android:textColor="#FFFF0000"
                    android:gravity="center"
                    android:textStyle="bold" />

            </LinearLayout>

            <!-- Calendar Grid: 6 rows x 7 columns = 42 day slots -->
            <!-- Row 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView android:id="@+id/day_1" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:textSize="11sp" android:textColor="@color/text" android:gravity="center" />
                <TextView android:id="@+id/day_2" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:textSize="11sp" android:textColor="@color/text" android:gravity="center" />
                <TextView android:id="@+id/day_3" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:textSize="11sp" android:textColor="@color/text" android:gravity="center" />
                <TextView android:id="@+id/day_4" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:textSize="11sp" android:textColor="@color/text" android:gravity="center" />
                <TextView android:id="@+id/day_5" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:textSize="11sp" android:textColor="@color/text" android:gravity="center" />
                <TextView android:id="@+id/day_6" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:textSize="11sp" android:textColor="@color/text" android:gravity="center" />
                <TextView android:id="@+id/day_7" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:textSize="11sp" android:textColor="#FFFF0000" android:gravity="center" />

            </LinearLayout>

            <!-- Row 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView android:id="@+id/day_8" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:textSize="11sp" android:textColor="@color/text" android:gravity="center" />
                <TextView android:id="@+id/day_9" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:textSize="11sp" android:textColor="@color/text" android:gravity="center" />
                <TextView android:id="@+id/day_10" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:textSize="11sp" android:textColor="@color/text" android:gravity="center" />
                <TextView android:id="@+id/day_11" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:textSize="11sp" android:textColor="@color/text" android:gravity="center" />
                <TextView android:id="@+id/day_12" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:textSize="11sp" android:textColor="@color/text" android:gravity="center" />
                <TextView android:id="@+id/day_13" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:textSize="11sp" android:textColor="@color/text" android:gravity="center" />
                <TextView android:id="@+id/day_14" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:textSize="11sp" android:textColor="#FFFF0000" android:gravity="center" />

            </LinearLayout>

            <!-- Row 3 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView android:id="@+id/day_15" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:textSize="11sp" android:textColor="@color/text" android:gravity="center" />
                <TextView android:id="@+id/day_16" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:textSize="11sp" android:textColor="@color/text" android:gravity="center" />
                <TextView android:id="@+id/day_17" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:textSize="11sp" android:textColor="@color/text" android:gravity="center" />
                <TextView android:id="@+id/day_18" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:textSize="11sp" android:textColor="@color/text" android:gravity="center" />
                <TextView android:id="@+id/day_19" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:textSize="11sp" android:textColor="@color/text" android:gravity="center" />
                <TextView android:id="@+id/day_20" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:textSize="11sp" android:textColor="@color/text" android:gravity="center" />
                <TextView android:id="@+id/day_21" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:textSize="11sp" android:textColor="#FFFF0000" android:gravity="center" />

            </LinearLayout>

            <!-- Row 4 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView android:id="@+id/day_22" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:textSize="11sp" android:textColor="@color/text" android:gravity="center" />
                <TextView android:id="@+id/day_23" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:textSize="11sp" android:textColor="@color/text" android:gravity="center" />
                <TextView android:id="@+id/day_24" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:textSize="11sp" android:textColor="@color/text" android:gravity="center" />
                <TextView android:id="@+id/day_25" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:textSize="11sp" android:textColor="@color/text" android:gravity="center" />
                <TextView android:id="@+id/day_26" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:textSize="11sp" android:textColor="@color/text" android:gravity="center" />
                <TextView android:id="@+id/day_27" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:textSize="11sp" android:textColor="@color/text" android:gravity="center" />
                <TextView android:id="@+id/day_28" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:textSize="11sp" android:textColor="#FFFF0000" android:gravity="center" />

            </LinearLayout>

            <!-- Row 5 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView android:id="@+id/day_29" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:textSize="11sp" android:textColor="@color/text" android:gravity="center" />
                <TextView android:id="@+id/day_30" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:textSize="11sp" android:textColor="@color/text" android:gravity="center" />
                <TextView android:id="@+id/day_31" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:textSize="11sp" android:textColor="@color/text" android:gravity="center" />
                <TextView android:id="@+id/day_32" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:textSize="11sp" android:textColor="@color/text" android:gravity="center" />
                <TextView android:id="@+id/day_33" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:textSize="11sp" android:textColor="@color/text" android:gravity="center" />
                <TextView android:id="@+id/day_34" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:textSize="11sp" android:textColor="@color/text" android:gravity="center" />
                <TextView android:id="@+id/day_35" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:textSize="11sp" android:textColor="#FFFF0000" android:gravity="center" />

            </LinearLayout>

            <!-- Row 6 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView android:id="@+id/day_36" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:textSize="11sp" android:textColor="@color/text" android:gravity="center" />
                <TextView android:id="@+id/day_37" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:textSize="11sp" android:textColor="@color/text" android:gravity="center" />
                <TextView android:id="@+id/day_38" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:textSize="11sp" android:textColor="@color/text" android:gravity="center" />
                <TextView android:id="@+id/day_39" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:textSize="11sp" android:textColor="@color/text" android:gravity="center" />
                <TextView android:id="@+id/day_40" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:textSize="11sp" android:textColor="@color/text" android:gravity="center" />
                <TextView android:id="@+id/day_41" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:textSize="11sp" android:textColor="@color/text" android:gravity="center" />
                <TextView android:id="@+id/day_42" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:textSize="11sp" android:textColor="#FFFF0000" android:gravity="center" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <!-- Right Side: Date Header + Records List (50%) -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.5"
        android:orientation="vertical">

        <!-- Date Header: DD MM YYYY -->
        <TextView
            android:id="@+id/calendar_date_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="19 09 2025"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/text"
            android:gravity="center"
            android:background="@color/WidgetBackground" />

        <!-- Records ListView -->
        <ListView
            android:id="@+id/calendar_records_listview"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:divider="@null"
            android:dividerHeight="0dp"
            android:scrollbars="vertical"
            android:fadeScrollbars="true" />

        <!-- Empty View -->
        <TextView
            android:id="@+id/calendar_empty_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Congratulations! No records"
            android:textSize="14sp"
            android:textColor="@color/textSecondary"
            android:gravity="center"
            android:visibility="gone" />

    </LinearLayout>

</LinearLayout>