            </LinearLayout>

            <LinearLayout android:id="@+id/calendar_row_3" android:layout_width="match_parent" android:layout_height="24dp" android:orientation="horizontal">
                <TextView android:id="@+id/day_15" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:gravity="center" android:textSize="11sp" />
                <TextView android:id="@+id/day_16" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:gravity="center" android:textSize="11sp" />
