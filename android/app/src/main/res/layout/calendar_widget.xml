<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="10dp"
    android:background="@color/white">

    <!-- Calendar Section (Left Side) -->
    <LinearLayout
        android:id="@+id/calendar_section"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginEnd="8dp">

        <!-- Calendar Header -->
        <TextView
            android:id="@+id/calendar_date_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="September 2025"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/text"
            android:gravity="center"
            android:padding="8dp"
            android:background="@drawable/rounded_corner_background"
            android:layout_marginBottom="4dp" />

        <!-- Calendar Grid Container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/rounded_corner_background"
            android:padding="4dp">

            <!-- Day Headers (M T W T F S S) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView android:layout_width="0dp" android:layout_height="24dp" android:layout_weight="1" android:text="M" android:gravity="center" android:textStyle="bold" android:textSize="12sp" />
                <TextView android:layout_width="0dp" android:layout_height="24dp" android:layout_weight="1" android:text="T" android:gravity="center" android:textStyle="bold" android:textSize="12sp" />
                <TextView android:layout_width="0dp" android:layout_height="24dp" android:layout_weight="1" android:text="W" android:gravity="center" android:textStyle="bold" android:textSize="12sp" />
                <TextView android:layout_width="0dp" android:layout_height="24dp" android:layout_weight="1" android:text="T" android:gravity="center" android:textStyle="bold" android:textSize="12sp" />
                <TextView android:layout_width="0dp" android:layout_height="24dp" android:layout_weight="1" android:text="F" android:gravity="center" android:textStyle="bold" android:textSize="12sp" />
                <TextView android:layout_width="0dp" android:layout_height="24dp" android:layout_weight="1" android:text="S" android:gravity="center" android:textStyle="bold" android:textSize="12sp" />
                <TextView android:layout_width="0dp" android:layout_height="24dp" android:layout_weight="1" android:text="S" android:gravity="center" android:textStyle="bold" android:textSize="12sp" />
            </LinearLayout>

            <!-- Calendar Rows -->
            <LinearLayout android:id="@+id/calendar_row_1" android:layout_width="match_parent" android:layout_height="24dp" android:orientation="horizontal">
                <TextView android:id="@+id/day_1" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:gravity="center" android:textSize="11sp" />
                <TextView android:id="@+id/day_2" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:gravity="center" android:textSize="11sp" />
                <TextView android:id="@+id/day_3" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:gravity="center" android:textSize="11sp" />
                <TextView android:id="@+id/day_4" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:gravity="center" android:textSize="11sp" />
                <TextView android:id="@+id/day_5" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:gravity="center" android:textSize="11sp" />
                <TextView android:id="@+id/day_6" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:gravity="center" android:textSize="11sp" />
                <TextView android:id="@+id/day_7" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:gravity="center" android:textSize="11sp" />
            </LinearLayout>

            <LinearLayout android:id="@+id/calendar_row_2" android:layout_width="match_parent" android:layout_height="24dp" android:orientation="horizontal">
                <TextView android:id="@+id/day_8" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:gravity="center" android:textSize="11sp" />
                <TextView android:id="@+id/day_9" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:gravity="center" android:textSize="11sp" />
                <TextView android:id="@+id/day_10" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:gravity="center" android:textSize="11sp" />
                <TextView android:id="@+id/day_11" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:gravity="center" android:textSize="11sp" />
                <TextView android:id="@+id/day_12" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:gravity="center" android:textSize="11sp" />
                <TextView android:id="@+id/day_13" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:gravity="center" android:textSize="11sp" />
