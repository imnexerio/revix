                <TextView android:id="@+id/day_33" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:gravity="center" android:textSize="11sp" />
                <TextView android:id="@+id/day_34" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:gravity="center" android:textSize="11sp" />
                <TextView android:id="@+id/day_35" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:gravity="center" android:textSize="11sp" />
            </LinearLayout>

            <LinearLayout android:id="@+id/calendar_row_6" android:layout_width="match_parent" android:layout_height="24dp" android:orientation="horizontal">
                <TextView android:id="@+id/day_36" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:gravity="center" android:textSize="11sp" />
                <TextView android:id="@+id/day_37" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:gravity="center" android:textSize="11sp" />
                <TextView android:id="@+id/day_38" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:gravity="center" android:textSize="11sp" />
                <TextView android:id="@+id/day_39" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:gravity="center" android:textSize="11sp" />
                <TextView android:id="@+id/day_40" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:gravity="center" android:textSize="11sp" />
                <TextView android:id="@+id/day_41" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:gravity="center" android:textSize="11sp" />
                <TextView android:id="@+id/day_42" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:gravity="center" android:textSize="11sp" />
            </LinearLayout>

        </LinearLayout>

        <!-- Add Record Button -->
        <ImageView
            android:id="@+id/calendar_add_record_button"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:src="@drawable/baseline_add_24"
            android:background="@drawable/rounded_corner_background"
            android:padding="4dp"
            android:contentDescription="Add Record" />

    </LinearLayout>

    <!-- Records Section (Right Side) -->
    <RelativeLayout
        android:id="@+id/records_section"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginStart="8dp">

        <!-- Records ListView -->
        <ListView
            android:id="@+id/calendar_records_listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@color/colorOnPrimary"
            android:dividerHeight="1dp"
            android:padding="2dp"/>

        <!-- Empty View -->
        <TextView
            android:id="@+id/calendar_empty_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="No tasks scheduled"
            android:textSize="14sp"
            android:textColor="@color/text" />

    </RelativeLayout>

</LinearLayout>