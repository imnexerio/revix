<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/calendar_record_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="4dp"
    android:gravity="center_vertical">

    <!-- Colored stick indicator - tap to mark as done -->
    <ImageView
        android:id="@+id/calendar_record_stick"
        android:layout_width="12dp"
        android:layout_height="20dp"
        android:src="@drawable/rounded_line_indicator"
        android:layout_marginStart="-6dp"
        android:layout_marginEnd="8dp"
        android:contentDescription="Tap to mark as done" />

    <!-- Record text: Time · Category · Subcategory · Title -->
    <TextView
        android:id="@+id/calendar_record_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Time · Category · Subcategory · Title"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/text"
        android:maxLines="1"
        android:ellipsize="end" />


</LinearLayout>