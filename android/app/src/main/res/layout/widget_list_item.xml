<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/list_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:background="@drawable/rounded_background"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/mark_as_done"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/baseline_radio_button_unchecked_24"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:contentDescription="Mark as done"
        android:clickable="true"
        android:focusable="true"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">
        <!-- First row: Subject info -->
        <TextView
            android:id="@+id/item_subject_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/text"
            android:singleLine="true"
            android:ellipsize="end"
            android:maxLines="1" />
        <!-- Second row: Reminder info -->
        <TextView
            android:id="@+id/item_reminder_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/text"
            android:singleLine="true"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_marginTop="2dp" />
    </LinearLayout>
</LinearLayout>