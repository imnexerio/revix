<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center"
    android:background="@color/white">

    <!-- Calendar Header -->
    <TextView
        android:id="@+id/calendar_date_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="September 2025"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/text"
        android:gravity="center"
        android:padding="12dp"
        android:background="@drawable/rounded_corner_background"
        android:layout_marginBottom="8dp" />

    <!-- Calendar Grid Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/rounded_corner_background"
        android:padding="8dp">

        <!-- Day Headers (M T W T F S S) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="4dp">
            <TextView android:layout_width="0dp" android:layout_height="32dp" android:layout_weight="1" android:text="M" android:gravity="center" android:textStyle="bold" android:textSize="14sp" android:textColor="@color/text" />
            <TextView android:layout_width="0dp" android:layout_height="32dp" android:layout_weight="1" android:text="T" android:gravity="center" android:textStyle="bold" android:textSize="14sp" android:textColor="@color/text" />
            <TextView android:layout_width="0dp" android:layout_height="32dp" android:layout_weight="1" android:text="W" android:gravity="center" android:textStyle="bold" android:textSize="14sp" android:textColor="@color/text" />
            <TextView android:layout_width="0dp" android:layout_height="32dp" android:layout_weight="1" android:text="T" android:gravity="center" android:textStyle="bold" android:textSize="14sp" android:textColor="@color/text" />
            <TextView android:layout_width="0dp" android:layout_height="32dp" android:layout_weight="1" android:text="F" android:gravity="center" android:textStyle="bold" android:textSize="14sp" android:textColor="@color/text" />
            <TextView android:layout_width="0dp" android:layout_height="32dp" android:layout_weight="1" android:text="S" android:gravity="center" android:textStyle="bold" android:textSize="14sp" android:textColor="@color/text" />
            <TextView android:layout_width="0dp" android:layout_height="32dp" android:layout_weight="1" android:text="S" android:gravity="center" android:textStyle="bold" android:textSize="14sp" android:textColor="@color/text" />
        </LinearLayout>

        <!-- Calendar Rows -->
        <LinearLayout android:id="@+id/calendar_row_1" android:layout_width="match_parent" android:layout_height="32dp" android:orientation="horizontal">
            <TextView android:id="@+id/day_1" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:gravity="center" android:textSize="13sp" android:textColor="@color/text" />
            <TextView android:id="@+id/day_2" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:gravity="center" android:textSize="13sp" android:textColor="@color/text" />
            <TextView android:id="@+id/day_3" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:gravity="center" android:textSize="13sp" android:textColor="@color/text" />
