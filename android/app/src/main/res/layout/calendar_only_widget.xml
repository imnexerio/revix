            <TextView android:id="@+id/day_40" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:gravity="center" android:textSize="13sp" android:textColor="@color/text" />
            <TextView android:id="@+id/day_41" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:gravity="center" android:textSize="13sp" android:textColor="@color/text" />
            <TextView android:id="@+id/day_42" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:gravity="center" android:textSize="13sp" android:textColor="@color/text" />
        </LinearLayout>

    </LinearLayout>

    <!-- Add Record Button -->
    <ImageView
        android:id="@+id/calendar_add_record_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:src="@drawable/baseline_add_24"
        android:background="@drawable/rounded_corner_background"
        android:padding="8dp"
        android:contentDescription="Add Record" />

</LinearLayout>